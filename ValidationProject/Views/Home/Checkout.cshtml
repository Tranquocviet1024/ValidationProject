@{
    Layout = "~/Views/Shared/_FlatShopLayout.cshtml";
    ViewBag.Title = "Checkout";
}

<div class="container_fullwidth">
    <div class="container">
        <h3 class="title">Checkout</h3>
        <div class="row">
            <div class="col-md-12">
                <p>You are logged in as @Session["User"]. Proceed with your checkout.</p>
                <p>Total: $60.00 (based on cart)</p>
                <button class="button">Confirm Purchase</button>
                <a href="/Home/Logout" class="button">Logout</a>
            </div>
        </div>
    </div>
</div>